.container.main-page
  .vertical-center
    = image_tag  "csp_logo.svg", :class => "text-center img-responsive", :alt => "Chi Safe Path logo"
  %br
  .vertical-center.light-background
    = form_for :issue, url: {action: "api_submit", controller: "issue"}, html: {class: "slim-center"} do |f|
      .form-group
        .vertical-center.text-center
          %p Upload any image with geotags, get your current location, or input an address to report hazardous sidewalks in the city of Chicago
        %h3 Geotagged Image
        = f.label :issuepic, "Upload Image", :class => "btn btn-default"
        = f.file_field :issuepic, accept: "image/*"
        %br
        %span#geo-warn
      .form-group
        %h3 Input Address
        %input.typeahead.form-control#addr-search{type: "text", placeholder: "Enter address..."}
        = f.hidden_field :lat
        = f.hidden_field :long
      .form-group
        %h3 Categories
        = f.select :description, ["Sidewalk hazard", "Sidewalk broken", "No curb cut", "Unusable due to construction"], {}, {:class => "form-control"}
      = f.submit "Submit", :class => "btn btn-default"
      %span#submit-warn
= javascript_include_tag "issue"
